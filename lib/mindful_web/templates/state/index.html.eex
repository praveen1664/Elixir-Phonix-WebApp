<div id="locations-page" class="locations-fam legacy-page">
  <div class="h-banner">
    <h1 class="has-text-centered">Our Locations</h1>
  </div>

  <div class="states-container">
    <%= for state <- @states do %>
      <%= link to: Routes.state_path(@conn, :show, state), class: "tile" do %>
        <img src="<%= MindfulWeb.SharedView.thumbnail_url(state.image_path) %>">

        <%= if state.coming_soon do %>
          <div class="soon-text">COMING SOON</div>
        <% end %>

        <div class="state-name">
          <%= state.name %>
        </div>
      <% end %>
    <% end %>
    <div class="tile no-state has-text-centered">
      <div>
        <div class="q">
          Don't see your state? <span class="nowrap">What state do</span> <span class="nowrap">you live in?</span>
        </div>
        <select class="btn btn-white has-text-centered" onchange="window.location = this.options[this.selectedIndex].value">
          <option value="">Choose state</option>
          <option value="/premarket?state=AL">Alabama</option>
          <option value="/premarket?state=AK">Alaska</option>
