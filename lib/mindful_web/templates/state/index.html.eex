          <option value="/premarket?state=GA">Georgia</option>
          <option value="/premarket?state=GU">Guam</option>
          <option value="/premarket?state=HI">Hawaii</option>
          <option value="/premarket?state=ID">Idaho</option>
          <option value="/premarket?state=IN">Indiana</option>
          <option value="/premarket?state=IA">Iowa</option>
